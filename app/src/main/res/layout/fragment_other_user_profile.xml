<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:padding="24dp"
    android:background="@color/backgroundColor">

    <Button
        android:id="@+id/btnBackToMatches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/outline_color"
        android:padding="10dp"
        android:text="Back"
        android:textColor="@color/textColor"
        android:textColorLink="@color/textColor"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:background="#E0E0E0"
            android:padding="20dp"
            android:src="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/tvOtherUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Loading Name..."
            android:textColor="@color/textColor"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOtherUserPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Loading Phone..."
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvOtherUserFavoriteGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Favorite games"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/OtherchipGroupGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:chipSpacing="8dp"
            app:singleSelection="false" />

        <Button
            android:id="@+id/btnFriend"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Add Friend"
            android:textColor="@color/static_text_color"
            android:textColorLink="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnOpenChat"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#2196F3"
            android:text="Send Message"
            android:textColor="@color/static_text_color"
            android:textColorLink="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvSuggestFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Suggested friends"
            android:textColor="@color/textColor"
            android:textSize="18sp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/ChipSuggestFriend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:chipSpacing="8dp"
            app:singleSelection="false" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>