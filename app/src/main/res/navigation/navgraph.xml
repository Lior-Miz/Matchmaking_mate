<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navgraph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.matchmaking_mate.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_inbox"
            app:destination="@id/inbox" />
        <action
            android:id="@+id/action_homeFragment_to_matchesFragment"
            app:destination="@id/matchesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.matchmaking_mate.ChatFragment"
        android:label="ChatFragment" />
    <fragment
        android:id="@+id/communityChatFragment"
        android:name="com.example.matchmaking_mate.CommunityChatFragment"
        android:label="CommunityChatFragment" />
    <fragment
        android:id="@+id/inbox"
        android:name="com.example.matchmaking_mate.Inbox"
        android:label="Inbox" >
        <action
            android:id="@+id/action_inbox_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_inbox_to_communityChatFragment"
            app:destination="@id/communityChatFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.matchmaking_mate.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/matchesFragment"
        android:name="com.example.matchmaking_mate.MatchesFragment"
        android:label="MatchesFragment" >
        <action
            android:id="@+id/action_matchesFragment_to_otherUserProfileFragment"
            app:destination="@id/otherUserProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/otherUserProfileFragment"
        android:name="com.example.matchmaking_mate.OtherUserProfileFragment"
        android:label="OtherUserProfileFragment" >
        <action
            android:id="@+id/action_otherUserProfileFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_otherUserProfileFragment_self"
            app:destination="@id/otherUserProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.matchmaking_mate.ProfileFragment"
        android:label="ProfileFragment" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.matchmaking_mate.RegisterFragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>